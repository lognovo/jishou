<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
      	<item name="android:homeAsUpIndicator">@drawable/icon_back</item>
    </style>
    
    <style name="ActionBarTwoLineSecondary" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/text_actionbar</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dip</item>
    </style>
    
        <style name="ActionBarTwoLineItem">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="ActionBarTwoLinePrimary" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_actionbar</item>
        
    </style>


     <style name="LoadingStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_middle_holo</item>
    </style>
    
    <style name="home_center_navigator" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
        
    </style>
 	<style name="home_bottom_navigator" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="city_list_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#D3D3D3</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="city_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="house_list_bar">
         <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
         <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawableRight">@drawable/icon_desc</item>
         <item name="android:drawablePadding">10dp</item>
         <item name="android:gravity">center</item>
    </style>
</resources>
